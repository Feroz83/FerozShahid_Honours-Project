<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/HomeView"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.honours.feroz.pettracker.Home">
    <TextView
        android:id="@+id/titleSearchArea"
        android:drawableStart="@drawable/ic_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto_light"
        android:text="  Search Area"/>
    <TextView
        android:id="@+id/nearbyHeading"
        android:layout_below="@id/titleSearchArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#E65100"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:text="Nearby Pets In Your Area"/>

    <TextView
        android:id="@+id/noPetsFoundMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#757575"
        android:text="No Missing Pets\n Were Reported In This Area"/>


<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/nearbyHeading"
    android:id="@+id/pets_list"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
